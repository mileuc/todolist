<%- include('header'); -%>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
      <form class="search" action="/add" method="post">
        <input class="search-input" type="text" name="listName" placeholder="display an existing list or create a new list" autocomplete="off">
        <button class="search-submit" type="submit">></button>
      </form>
    </div>

    <div class="box">
      <% newListItems.forEach(function(newListItem){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%= newListItem._id %>" onChange="this.form.submit()">
            <p><%= newListItem.name %></p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="add a new item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
    </div>
<%- include('footer'); -%>